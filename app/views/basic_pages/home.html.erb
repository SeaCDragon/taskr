
<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="project_form">
				<%= render 'shared/project_form' %>
			</section>
		</aside>
	</div>
<% else %>
	<div class="center jumbotron">
		<h1>Break the problem down with Taskr</h1>
		<p>Big projects are intimidating until you separate them into small tasks. Taskr can help with that!</p>
		<p><%= link_to "Create an account", signup_path %> to get started </p>
	</div>
<% end %>
